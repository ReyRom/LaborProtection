<Page x:Class="LaborProtectionClient.View.TestListPage"
      x:Name="page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaborProtectionClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestListPage" Loaded="page_Loaded">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#2D0A8F" />
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#A3B7EE" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="Background" Value="#6C8CE2" />
            <Setter Property="Foreground" Value="#2D0A8F" />
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="Background" Value="#6C8CE2" />
            <Setter Property="Foreground" Value="#2D0A8F" />
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="MaxWidth" Value="200"/>
        </Style>
    </Page.Resources>
    <Grid Background="#BED6F6">
        <DockPanel>
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Background" Value="#A3B7EE"/>
                    </Style>
                </StackPanel.Style>
                <Button Content="⬅ На главную" Click="Button_Click" Height="30"></Button>
                <ListBox ItemsSource="{Binding Tests}" SelectedItem="{Binding Test}" Width="200" HorizontalContentAlignment="Stretch"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden" Height="{Binding ListHeight}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
            </StackPanel>
            

            <StackPanel x:Name="TestPanel" VerticalAlignment="Center" HorizontalAlignment="Center" DataContext="{Binding Test}" >
                <TextBlock Text="{Binding Name}">
                    <TextBlock.Margin>10</TextBlock.Margin>
                    <TextBlock.FontSize>30</TextBlock.FontSize>
                </TextBlock>
                <TextBlock Text="{Binding Description}">
                    <TextBlock.Margin>10</TextBlock.Margin>
                    <TextBlock.FontSize>20</TextBlock.FontSize>
                </TextBlock>
                <Button Content="Начать тест" FontSize="15" CommandParameter="{Binding ElementName=page, Path=Test}" Command="{Binding ElementName=page, Path=StartTestCommand}"></Button>
            </StackPanel>

        </DockPanel>
    </Grid>
</Page>
