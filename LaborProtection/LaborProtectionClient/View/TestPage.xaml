<Page x:Name="page"
      xmlns:Controls="clr-namespace:LaborProtectionClient.Controls"  x:Class="LaborProtectionClient.View.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaborProtectionClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <Grid Background="#BED6F6">
        <Controls:QuestionBox VerticalAlignment="Center" MaxWidth="600" x:Name="QuestionBox" Question="{Binding ElementName=page, Path=DataContext.CurrentQuestion}" Loaded="QuestionBox_Loaded" SendButton_Click="QuestionBox_NextQuestion" TimerEnd="QuestionBox_NextQuestion">
        </Controls:QuestionBox>
    </Grid>
</Page>
